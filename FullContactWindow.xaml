<Window x:Class="ContactManager.FullContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManager"
        mc:Ignorable="d"
        Title="FullContactWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="ID:" FontWeight="Bold" />
            <TextBox x:Name="IDTextBox" IsReadOnly="True" Margin="0 0 0 10" />
            <TextBlock Text="Name:" FontWeight="Bold" />
            <TextBox x:Name="NameTextBox" Margin="0 0 0 10" />
            <TextBlock Text="Age:" FontWeight="Bold" />
            <TextBox x:Name="AgeTextBox" Margin="0 0 0 10" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Edit" Click="EditButton_Click" Width="100" Margin="0 0 10 0" />
                <Button Content="Back" Click="BackButton_Click" Width="100" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
